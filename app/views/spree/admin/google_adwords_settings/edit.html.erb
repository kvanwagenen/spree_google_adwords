<h1><%= t("google_adwords.settings") %></h1>

<%= form_tag(admin_google_adwords_settings_path, :method => :put) do |f| %>
  <% [:oauth2_client_id, :oauth2_client_secret, :developer_token, :user_agent, :environment].each do |setting| %>
    <p><%= adwords_setting_field(setting) %></p>
  <% end %>

  <p class="form-buttons">
    <%= button Spree.t('update') %>
    <%= Spree.t("or") %> <%= link_to Spree.t("cancel"), admin_google_adwords_settings_url %>
  </p>
<% end %>

<% content_for :head do %>
  <style>
    .edit_google_adwords_configuration input { width: 250px; }
  </style>
<% end %>
